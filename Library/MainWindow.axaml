<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Library.MainWindow"
        Title="Library">
    <Grid>
        <DataGrid Name="ReaderGrid" x:CompileBindings="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ReaderID}"></DataGridTextColumn>
                <DataGridTextColumn Header="Имя" Binding="{Binding ReaderName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Пол" Binding="{Binding GenderName}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
